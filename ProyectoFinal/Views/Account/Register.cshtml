@model ProyectoFinal.DTOs.Commands.Requests.CreateUserCommandRequest

<div class="container-lg mt-5">
    <div class="mx-auto" style="max-width: 320px;">
        <div class="Box">
            <div class="Box-header">
                <h3 class="Box-title">Registrarse</h3>
            </div>
            <div class="Box-body">
                <form asp-action="Register" method="post">
                    <div class="form-group">
                        <label for="Nombre">Nombre de Usuario</label>
                        <input type="text" class="form-control" asp-for="@Model.UserName"/>
                               <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="Email">Email</label>
                        <input type="text" class="form-control" asp-for="@Model.Email" />
                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="Pass">Contraseña</label>
                        <input type="password" class="form-control" asp-for="@Model.Pass"/>
                        <span asp-validation-for="@Model.Pass" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block mt-3">
                        Confirmar
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
