@using ProyectoFinal.DTOs.Commands.Requests;
@model SignInUserCommandRequest

<div class="container-lg mt-5">
    <div class="mx-auto" style="max-width: 320px;">
        <div class="Box">
            <div class="Box-header">
                <h3 class="Box-title">Iniciar Sesion</h3>
            </div>
            <div class="Box-body">
                <form asp-action="Login" method="post">
                    <div class="form-group">
                        <label for="Nombre">Nombre de Usuario</label>
                        <input type="text" class="form-control" asp-for="@Model.Nombre"/>
                        <span asp-validation-for="@Model.Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="Password">Contraseña</label>
                        <input type="password" class="form-control" asp-for="@Model.Password" />
                        <span asp-validation-for="@Model.Password" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block mt-3">
                        Confirmar
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
